namespace Dragengine.Utils

/**
 * \brief Game engine translations.
 * \version 1.16
 * 
 * For internal use.
 */
class EngineTranslations
	static var TranslationManager pTranslationManager = null
	
	func new()
	end
	
	static func TranslationManager get()
		if pTranslationManager == null
			pTranslationManager = TranslationManager.new()
			pTranslationManager.addFromDirectory("/shareddata/languages", true)
			pTranslationManager.setFallbackWithId("en")
			pTranslationManager.setActiveWithIdIfPresent(Engine.getUserLocaleLanguage())
		end
		return pTranslationManager
	end
end
