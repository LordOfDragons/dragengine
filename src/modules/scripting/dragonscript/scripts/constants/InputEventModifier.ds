namespace Dragengine


/**
 * \brief InputEvent modifier.
 */
fixed class InputEventModifier
	/** \brief No modifier. */
	public static fixed var int none = 0h0
	
	/** \brief Shift modifier. */
	public static fixed var int shift = 0h1
	
	/** \brief Control modifier. */
	public static fixed var int control = 0h2
	
	/** \brief Alt modifier. */
	public static fixed var int alt = 0h4
	
	/**
	 * \brief Meta modifier.
	 * \details Sometimes used for example apple combine key or haiku.
	 */
	public static fixed var int meta = 0h8
	
	/**
	 * \brief Super modifier.
	 * \details Usually not used.
	 */
	public static fixed var int advanced1 = 0h10
	
	/**
	 * \brief Hyper modifier.
	 * \details Usually not used.
	 */
	public static fixed var int advanced2 = 0h20
end
