namespace Dragengine


/**
 * \brief Module parameter type.
 */
enum ModuleParameterType
	/** \brief Boolean value ('0' or '1'). */
	boolean
	
	/** \brief Numeric value. */
	numeric
	
	/** \brief Numeric value which has to be inside certain range. */
	ranged
	
	/** \brief String value. */
	string
	
	/** \brief String value from selection of values. */
	selection
end
