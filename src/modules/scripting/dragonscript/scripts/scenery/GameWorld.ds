	/** \brief Remove all elements calling safeDispose() on them. */
	public func void removeAllElements()
		this.pElements.removeAll( block Element each
			each.setGameWorld( null )
			each.safeDispose()
		end )
		this.pElementIDMap.removeAll()
	end
	
