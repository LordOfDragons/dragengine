namespace Dragengine.Scenery

pin Dragengine.Gui
pin Dragengine.LoadSave
pin Dragengine.Preloading
pin Dragengine.Utils


/**
 * \brief Basic VR actor class.
 * \version 1.6
 * 
 * Extends BaseActor with VR behaviors.
 */
class BaseVRActor extends BaseActor
	var ECBehaviorVRPlayspace.Instance pVRPlayspace
	var ECBehaviorVRHMD.Instance pVRHMD
	var ECBehaviorVRHand.Instance pVRRightHand
	var ECBehaviorVRHand.Instance pVRLeftHand
	var ECBehaviorVRHandPointAt.Instance pVRRightHandPointAt
	var ECBehaviorVRHandPointAt.Instance pVRLeftHandPointAt
	var ECBehaviorVRHandLaserPointer.Instance pVRRightHandLaserPointer
	var ECBehaviorVRHandLaserPointer.Instance pVRLeftHandLaserPointer
	var ECBehaviorAttachSlot.Instance pVRRightHandAttachSlot
	var ECBehaviorAttachSlot.Instance pVRLeftHandAttachSlot
	var ECBehaviorGrabber.Instance pVRRightHandGrabber
	var ECBehaviorGrabber.Instance pVRLeftHandGrabber
	var ECBehaviorVRHandPose.Instance pVRRightHandPose
	var ECBehaviorVRHandPose.Instance pVRLeftHandPose
	var ECBehaviorVRHandLocomotion.Instance pVRRightHandLocomotion
	var ECBehaviorVRHandLocomotion.Instance pVRLeftHandLocomotion
	var ECBehaviorActorAnimated.Instance pVRRightHandAnimated
	var ECBehaviorActorAnimated.Instance pVRLeftHandAnimated
	var ECBehaviorVRHandAction.Instance pVRRightHandAction
	var ECBehaviorVRHandAction.Instance pVRLeftHandAction
	
	
	
	/** \brief Create element. */
	func new(BaseVRActorClass eclass) super(eclass)
		pVRPlayspace = eclass.getVRPlayspace().instance(this)
		pVRHMD = eclass.getVRHMD().instance(this)
		pVRRightHand = eclass.getVRRightHand().instance(this)
		pVRLeftHand = eclass.getVRLeftHand().instance(this)
		pVRRightHandPointAt = eclass.getVRRightHandPointAt().instance(this)
		pVRLeftHandPointAt = eclass.getVRLeftHandPointAt().instance(this)
		pVRRightHandLaserPointer = eclass.getVRRightHandLaserPointer().instance(this)
		pVRLeftHandLaserPointer = eclass.getVRLeftHandLaserPointer().instance(this)
		pVRRightHandAttachSlot = eclass.getVRRightHandAttachSlot().instance(this)
		pVRLeftHandAttachSlot = eclass.getVRLeftHandAttachSlot().instance(this)
		pVRRightHandGrabber = eclass.getVRRightHandGrabber().instance(this)
		pVRLeftHandGrabber = eclass.getVRLeftHandGrabber().instance(this)
		pVRRightHandPose = eclass.getVRRightHandPose().instance(this)
		pVRLeftHandPose = eclass.getVRLeftHandPose().instance(this)
		pVRRightHandLocomotion = eclass.getVRRightHandLocomotion().instance(this)
		pVRLeftHandLocomotion = eclass.getVRLeftHandLocomotion().instance(this)
		pVRRightHandAnimated = eclass.getVRRightHandAnimated().instance(this)
		pVRLeftHandAnimated = eclass.getVRLeftHandAnimated().instance(this)
		pVRRightHandAction = eclass.getVRRightHandAction().instance(this)
		pVRLeftHandAction = eclass.getVRLeftHandAction().instance(this)
	end
	
	
	
	/** \brief VR Playspace behavior instance. */
	func ECBehaviorVRPlayspace.Instance getVRPlayspace()
		return pVRPlayspace
	end
	
	/** \brief VR HMD. */
	func ECBehaviorVRHMD.Instance getVRHMD()
		return pVRHMD
	end
	
	/** \brief VR Right Hand Controller. */
	func ECBehaviorVRHand.Instance getVRRightHand()
		return pVRRightHand
	end
	
	/** \brief VR Left Hand Controller. */
	func ECBehaviorVRHand.Instance getVRLeftHand()
		return pVRLeftHand
	end
	
	/** \brief VR Right Hand Controller Point-At. */
	func ECBehaviorVRHandPointAt.Instance getVRRightHandPointAt()
		return pVRRightHandPointAt
	end
	
	/** \brief VR Left Hand Controller Point-At. */
	func ECBehaviorVRHandPointAt.Instance getVRLeftHandPointAt()
		return pVRLeftHandPointAt
	end
	
	/** \brief VR Right Hand Controller Laser Pointer. */
	func ECBehaviorVRHandLaserPointer.Instance getVRRightHandLaserPointer()
		return pVRRightHandLaserPointer
	end
	
	/** \brief VR Left Hand Controller Laser Pointer. */
	func ECBehaviorVRHandLaserPointer.Instance getVRLeftHandLaserPointer()
		return pVRLeftHandLaserPointer
	end
	
	/**
	 * \brief VR Right Hand Controller Attach Slot.
	 * \version 1.9
	 */
	func ECBehaviorAttachSlot.Instance getVRRightHandAttachSlot()
		return pVRRightHandAttachSlot
	end
	
	/**
	 * \brief VR Left Hand Controller Attach Slot.
	 * \version 1.9
	 */
	func ECBehaviorAttachSlot.Instance getVRLeftHandAttachSlot()
		return pVRLeftHandAttachSlot
	end
	
	/**
	 * \brief VR Right Hand Controller Grabber.
	 * \version 1.9
	 */
	func ECBehaviorGrabber.Instance getVRRightHandGrabber()
		return pVRRightHandGrabber
	end
	
	/**
	 * \brief VR Left Hand Controller Grabber.
	 * \version 1.9
	 */
	func ECBehaviorGrabber.Instance getVRLeftHandGrabber()
		return pVRLeftHandGrabber
	end
	
	/**
	 * \brief VR Right Hand Pose.
	 * \version 1.10
	 */
	func ECBehaviorVRHandPose.Instance getVRRightHandPose()
		return pVRRightHandPose
	end
	
	/**
	 * \brief VR Left Hand Pose.
	 * \version 1.10
	 */
	func ECBehaviorVRHandPose.Instance getVRLeftHandPose()
		return pVRLeftHandPose
	end
	
	/**
	 * \brief VR Right Hand Locomotion.
	 * \version 1.28
	 */
	func ECBehaviorVRHandLocomotion.Instance getVRRightHandLocomotion()
		return pVRRightHandLocomotion
	end
	
	/**
	 * \brief VR Left Hand Locomotion.
	 * \version 1.28
	 */
	func ECBehaviorVRHandLocomotion.Instance getVRLeftHandLocomotion()
		return pVRLeftHandLocomotion
	end
	
	/**
	 * \brief VR Right Hand Animated.
	 * \version 1.10
	 */
	func ECBehaviorActorAnimated.Instance getVRRightHandAnimated()
		return pVRRightHandAnimated
	end
	
	/**
	 * \brief VR Left Hand Animated.
	 * \version 1.10
	 */
	func ECBehaviorActorAnimated.Instance getVRLeftHandAnimated()
		return pVRLeftHandAnimated
	end
	
	/**
	 * \brief VR Right Hand Action.
	 * \version 1.10
	 */
	func ECBehaviorVRHandAction.Instance getVRRightHandAction()
		return pVRRightHandAction
	end
	
	/**
	 * \brief VR Left Hand Action.
	 * \version 1.10
	 */
	func ECBehaviorVRHandAction.Instance getVRLeftHandAction()
		return pVRLeftHandAction
	end
	
	
	
	/** \brief Visit element. */
	func void visit(ElementVisitor visitor)
		visitor.visitBaseVRActor(this)
	end
end
