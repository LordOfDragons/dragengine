namespace Dragengine.Gui



/**
 * Manages a text string.
 */
interface TextModel
	
	/**
	 * Retrieve the text string.
	 *
	 * @returns text string
	 */
	func String getText()
	
	/**
	 * Sets the text string.
	 *
	 * @param text Text string
	 */
	func void setText( String text )
	
	/**
	 * Adds a text model listener.
	 *
	 * @param listener Listener to add
	 */
	func void addListener( TextModelListener listener )
	
	/**
	 * Removes a text model listener.
	 *
	 * @param listener Listener to remove
	 */
	func void removeListener( TextModelListener listener )
	
end
