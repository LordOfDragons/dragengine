namespace Dragengine.Gui.Events


/**
 * \brief Immutable event modified by the state of modifier keys.
 */
class ModifiableEvent extends Event
	/** \brief Shift key pressed */
	public fixed var int shift = 1
	
	/** \brief Control key pressed */
	public fixed var int control = 2
	
	/** \brief Alt key pressed */
	public fixed var int alt = 4
	
	
	
	/** \brief Modifier keys. */
	private var int pModifiers
	
	
	
	/** \brief Create event. */
	public func new( Object source, int id, int modifiers ) super( source, id )
		this.pModifiers = modifiers
	end
	
	
	
	/** \brief Modifier keys. */
	public func int getModifiers()
		return this.pModifiers
	end
end
