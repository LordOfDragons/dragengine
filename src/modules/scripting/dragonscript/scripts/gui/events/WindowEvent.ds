namespace Dragengine.Gui.Events



/**
 * \brief Immutable window event.
 */
class WindowEvent extends Event
	/** \brief Window activated event identifier. */
	public fixed var int idWindowActivated = 80
	
	/** \brief Window deactivated event identifier. */
	public fixed var int idWindowDeactivated = 81
	
	/** \brief Window closing event identifier. */
	public fixed var int idWindowClosing = 82
	
	/** \brief Window restored event identifier. */
	public fixed var int idWindowRestored = 83
	
	/** \brief Window minimized event identifier. */
	public fixed var int idWindowMinimized = 84
	
	/** \brief Window maximized event identifier. */
	public fixed var int idWindowMaximized = 85
	
	
	
	/** \brief Event identifier is a window event identifier. */
	public static func bool isWindowEvent( int identifier )
		return identifier >= idWindowActivated and identifier <= idWindowMaximized
	end
	
	
	
	/** \brief Creates window event. */
	public func new( Object source, int id ) super( source, id )
	end
end
