<?xml version='1.0' encoding='UTF-8'?>
<guiTheme>
	<designer name='WindowVirtualKeyboard' type='Window'>
		<canvasCreator parameter='normal.canvas' extend='../modern/framed/background.ccreator.xml'>
			<colorMatrix parameter='colorMatrix'>
				<scale r='0' g='0' b='0' a='0.65'/>
			</colorMatrix>
		</canvasCreator>
		<border parameter='normal.border' type='CanvasCreator'>
			<canvasCreator parameter='canvasCreator' extend='../modern/framed/normal.ccreator.xml'>
				<colorMatrix parameter='colorMatrix'>
					<scale r='0.75' g='0.75' b='0.75' a='0.85'/>
				</colorMatrix>
			</canvasCreator>
			<borderSize parameter='size' all='2'/>
		</border>
		<borderSize parameter='normal.padding' all='2'/>
	</designer>
	
	<designer name='Label.WindowVirtualKeyboard.Key' type='Label'>
		<canvasCreator parameter='normal.canvas' extend='../modern/framed/background.ccreator.xml'>
			<colorMatrix parameter='colorMatrix'>
				<scale r='0.5' g='0.5' b='0.5'/>
			</colorMatrix>
		</canvasCreator>
		<canvasCreator parameter='hover.canvas' extend='../modern/framed/background.ccreator.xml'>
			<colorMatrix parameter='colorMatrix'>
				<scale r='0.5' g='1' b='1'/>
			</colorMatrix>
		</canvasCreator>
		<point parameter='normal.minimumSize' x='24' y='24'/>
		<color parameter='normal.textColor' r='1' g='1' b='1'/>
		<font parameter='normal.font' size='15'>../modern/fonts/sans15.defont</font>
	</designer>
	
	<designer name='Image.WindowVirtualKeyboard.Key' type='Image'>
		<canvasCreator parameter='normal.canvas' extend='../modern/framed/background.ccreator.xml'>
			<colorMatrix parameter='colorMatrix'>
				<scale r='0.5' g='0.5' b='0.5'/>
			</colorMatrix>
		</canvasCreator>
		<canvasCreator parameter='hover.canvas' extend='../modern/framed/background.ccreator.xml'>
			<colorMatrix parameter='colorMatrix'>
				<scale r='0.5' g='1' b='1'/>
			</colorMatrix>
		</canvasCreator>
		<point parameter='normal.minimumSize' x='24' y='24'/>
	</designer>
	
	<designer name='Label.WindowVirtualKeyboard.Key.Wide' extendNamed='Label.WindowVirtualKeyboard.Key'>
		<point parameter='normal.minimumSize' x='42' y='24'/>
	</designer>
	
	<designer name='Label.WindowVirtualKeyboard.Key.Space' extendNamed='Label.WindowVirtualKeyboard.Key'>
		<point parameter='normal.minimumSize' x='144' y='24'/>
	</designer>
</guiTheme>
